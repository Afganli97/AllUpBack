@model Product
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
 <div>
    <div>
        <img width="200" height="200" src="~/assets/images/product/@(Model.Images.FirstOrDefault(x=>x.IsMain == false)!=null?Model.Images.FirstOrDefault(x=>x.IsMain == false).ImageUrl:Model.Images.Find(x=>x.IsMain).ImageUrl)">
    </div>
    <div class="d-flex">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@Model.ProductName</h5>
                <p class="card-text">@Model.Category.CategoryName</p>
                <p class="card-text">@Model.Price$</p>
                <a asp-action="index" class="btn btn-outline-primary">Go back</a>
            </div>
        </div>
    
    </div>
 </div>
