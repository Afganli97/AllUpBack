@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products</h4>
            <p class="card-description">
                <a asp-action="create" class="btn btn-outline-success">Create Product</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Main Image </th>
                        <th> Product Name </th>
                        <th> Is Deleted </th>
                        <th> Settings </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src='~/assets/images/product/@(item.Images.FirstOrDefault(i=>i.IsMain==true)!=null?item.Images.FirstOrDefault(i=>i.IsMain==true).ImageUrl:"product-1.jpg")'/></td>
                            <td>@item.ProductName</td>
                            <td>@item.IsDeleted</td>
                            <td>
                                <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
                                <a asp-action="update" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>